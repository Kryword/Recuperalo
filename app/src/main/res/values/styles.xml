<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/RButton</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="RButton" parent="android:Widget.Button" >
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText2</item>
        <item name="android:colorPressedHighlight">@color/colorPrimaryDark</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>
